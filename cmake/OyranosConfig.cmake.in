# - Find Oyranos
# Find the native Oyranos headers and libraries.
#
#  OYRANOS_FOUND        - True if Oyranos found.
#  OYRANOS_INCLUDE_DIRS - where to find kdb.h, etc.
#  OYRANOS_LIBRARIES    - List of libraries when using Oyranos.
#  OYRANOS_LIBRARY_DIRS - where to find libraries
#
#  OYRANOS_VERSION       - The version of oyranos (x.y.z)
#  OYRANOS_VERSION_MAJOR - The major version of oyranos (x)
#  OYRANOS_VERSION_MINOR - The minor version of oyranos (y)
#  OYRANOS_VERSION_MICRO - The patch version of oyranos (z)
#



# Set path to the header file.
IF(APPLE)
  FIND_PATH(OYRANOS_INCLUDE_DIR
	NAMES oyranos_profile.h
	PATHS @CMAKE_INSTALL_PREFIX@/@FRAMEWORK_DIR@/@PROJECT_NAME@.framework/Headers
	NO_DEFAULT_PATH
  )
  FIND_PATH(OYRANOS_CONFIG_INCLUDE_DIR
	NAMES oyranos_devices.h
	PATHS @CMAKE_INSTALL_PREFIX@/@FRAMEWORK_DIR@/@PROJECT_NAME@Config.framework/Headers
	NO_DEFAULT_PATH
  )
  FIND_PATH(OYRANOS_MODULES_INCLUDE_DIR
	NAMES oyranos_module.h
	PATHS @CMAKE_INSTALL_PREFIX@/@FRAMEWORK_DIR@/@PROJECT_NAME@Modules.framework/Headers
	NO_DEFAULT_PATH
  )
  FIND_PATH(OYRANOS_OBJECT_INCLUDE_DIR
	NAMES oyranos_object.h
	PATHS @CMAKE_INSTALL_PREFIX@/@FRAMEWORK_DIR@/@PROJECT_NAME@Object.framework/Headers
	NO_DEFAULT_PATH
  )
  FIND_PATH(OYRANOS_CORE_INCLUDE_DIR
	NAMES oyranos_core.h
	PATHS @CMAKE_INSTALL_PREFIX@/@FRAMEWORK_DIR@/@PROJECT_NAME@Core.framework/Headers
	NO_DEFAULT_PATH
  )
ELSE(APPLE)
  FIND_PATH(OYRANOS_INCLUDE_DIR
	NAMES oyranos.h
	PATHS @CMAKE_INSTALL_PREFIX@/include/@TARGET_INCLUDE_FOLDER@
	NO_DEFAULT_PATH
  )
ENDIF(APPLE)
MARK_AS_ADVANCED(OYRANOS_INCLUDE_DIR)

# Set path to the library.
FIND_LIBRARY(OYRANOS_CORE_LIBRARY
	NAMES @PROJECT_NAME@Core
	PATHS @CMAKE_INSTALL_PREFIX@/@LIB_DIR@
	NO_DEFAULT_PATH
)
SET( OYRANOS_CORE_LIBRARIES ${OYRANOS_CORE_LIBRARY} @EXTRA_LIBS_CORE@ )
MARK_AS_ADVANCED(OYRANOS_CORE_LIBRARIES)
FIND_LIBRARY(OYRANOS_OBJECT_LIBRARY
	NAMES @PROJECT_NAME@Object
	PATHS @CMAKE_INSTALL_PREFIX@/@LIB_DIR@
	NO_DEFAULT_PATH
)
SET( OYRANOS_OBJECT_LIBRARIES ${OYRANOS_OBJECT_LIBRARY} ${OYRANOS_CORE_LIBRARIES} )
MARK_AS_ADVANCED(OYRANOS_OBJECT_LIBRARIES)
FIND_LIBRARY(OYRANOS_MODULES_LIBRARY
	NAMES @PROJECT_NAME@Modules
	PATHS @CMAKE_INSTALL_PREFIX@/@LIB_DIR@
	NO_DEFAULT_PATH
)
SET( OYRANOS_MODULES_LIBRARIES ${OYRANOS_MODULES_LIBRARY} ${OYRANOS_OBJECT_LIBRARY} ${OYRANOS_CORE_LIBRARY} @EXTRA_LIBS@ )
MARK_AS_ADVANCED(OYRANOS_MODULES_LIBRARIES)
FIND_LIBRARY(OYRANOS_CONFIG_LIBRARY
	NAMES @PROJECT_NAME@Config
	PATHS @CMAKE_INSTALL_PREFIX@/@LIB_DIR@
	NO_DEFAULT_PATH
)
SET( OYRANOS_CONFIG_LIBRARIES ${OYRANOS_CONFIG_LIBRARY} ${OYRANOS_MODULES_LIBRARY} ${OYRANOS_OBJECT_LIBRARY} ${OYRANOS_CORE_LIBRARY} @EXTRA_LIBS_CONFIG@ )
MARK_AS_ADVANCED(OYRANOS_CONFIG_LIBRARIES)
FIND_LIBRARY(OYRANOS_LIBRARY
	NAMES @PROJECT_NAME@
	PATHS @CMAKE_INSTALL_PREFIX@/@LIB_DIR@
	NO_DEFAULT_PATH
)
SET( OYRANOS_LIBRARIES  ${OYRANOS_LIBRARY} ${OYRANOS_CONFIG_LIBRARIES} )
MARK_AS_ADVANCED(OYRANOS_LIBRARIES)

# handle the QUIETLY and REQUIRED arguments and set OYRANOS_FOUND to TRUE if
# all listed variables are TRUE
INCLUDE(FindPackageHandleStandardArgs)
FIND_PACKAGE_HANDLE_STANDARD_ARGS(Oyranos DEFAULT_MSG OYRANOS_LIBRARY OYRANOS_INCLUDE_DIR)

if (OYRANOS_FOUND)
        SET( OYRANOS_VERSION_MAJOR @OYRANOS_VERSION_MAJOR@ )
        SET( OYRANOS_VERSION_MINOR @OYRANOS_VERSION_MINOR@ )
        SET( OYRANOS_VERSION_MICRO @OYRANOS_VERSION_MICRO@ )
        SET( OYRANOS_VERSION @OYRANOS_VERSION@ )
        SET( OYRANOS_CMMSUBPATH @OY_CMMSUBPATH@ )
        SET( HAVE_OYRANOS TRUE )
	SET( OYRANOS_INCLUDE_DIRS
             ${OYRANOS_INCLUDE_DIR}
             ${OYRANOS_CONFIG_INCLUDE_DIR}
             ${OYRANOS_MODULES_INCLUDE_DIR}
             ${OYRANOS_OBJECT_INCLUDE_DIR}
             ${OYRANOS_CORE_INCLUDE_DIR}
           )
        SET( OYRANOS_LIBRARY_DIRS @CMAKE_INSTALL_PREFIX@/@LIB_DIR@ )
endif (OYRANOS_FOUND)
