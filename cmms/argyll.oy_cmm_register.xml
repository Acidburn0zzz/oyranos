<!--?xml version="1.0" encoding="UTF-8"? -->
<!-- Oyranos CMM format 0.1 -->
<!-- Sample CMM: ArgyllWrapper -->


<!-- use oyNAME as UI string and oyDESCRIPTION as tooltip -->
<!-- oyARRAY's are counted from zero -->

<oyDOMAIN>oyranos</oyDOMAIN>

<!-- oyDOMAIN_PATH></oyDOMAIN_PATH -->

<oyCMM_REGISTER>
  <!-- The dlopened function  static char* version()  from the CMM.so must
       give the following string back.
       Make shure any API changes, described in this configuration file are
       reflected here!  -->
  <oyVERSION_CMM>0.6</oyVERSION_CMM>

  <!-- Create a new group to present the CMM in -->
  <oyCMM_GROUP>
    <!-- Use the same 4 char identifier as for ICC profiles
         needed -->
    <oyID>argl</oyID>
    <!-- Thats the UI title users should get presented
         needed -->
    <oyNAME>ArgyllCMS</oyNAME>
    <!-- Thats the UI tooltip users should get presented
         can -->
    <oyDESCRIPTION>ArgyllCMS colour management module</oyDESCRIPTION>

    <!-- leave the following blank if you dont need special user layouts -->
    <oyGROUPS>
      <oyARRAY>
        <oyGROUP>
          <oyID>100</oyID>
          <oyCONFIG_STRING_XML>oyGROUP_ARGL_COLOR_CONVERSION</oyCONFIG_STRING_XML>
          <oyNAME>ArgyllCMS</oyNAME>
          <oyDESCRIPTION>ArgyllCMS colour management module</oyDESCRIPTION>
        </oyGROUP>
      </oyARRAY>
    </oyGROUPS>
  </oyCMM_GROUP>


  <!-- add functions to do something useful -->
  <oyFUNCTIONS>
    <oyARRAY>
      <oyFUNCTION>
        <oyID>1</oyID>
        <!-- tell Oyranos which function type you provide -->
        <oyCONFIG_STRING_XML>oyCOLOUR_TRANSFORMATION</oyCONFIG_STRING_XML>

        <oyNAME>Colour Transform</oyNAME>
        <oyDESCRIPTION>Function for Colour Space Transformations.</oyDESCRIPTION>

        <!-- The name of the library to open -->
        <oyDYNLOAD_LIB>libargyllcmm.so.0</oyDYNLOAD_LIB>
        <!-- The name of the function in the library to to call -->
        <oyDYNLOAD_FUNC>cmmColourTransform</oyDYNLOAD_FUNC>
        <!-- optionally describe the arguments 
             they should remain static to allow type checking -->
        <oyOPTIONS>
          <oyARRAY>
            <oyOPTION>
              <oyOPTION_TYPE>oyTYPE_VOID</oyOPTION_TYPE>
              <oyNAME>the Data Object</oyNAME>
              <oyDESCRIPTION>no choices</oyDESCRIPTION>
              <oyCONFIG_STRING>data</oyCONFIG_STRING>
            </oyOPTION>
          </oyARRAY>
        </oyOPTIONS>
      </oyFUNCTION>

      <oyFUNCTION>
        <oyID>2</oyID>
        <oyCONFIG_STRING_XML>oyCOLOUR_TRANSFORMATION_CREATE</oyCONFIG_STRING_XML>

        <oyNAME>Colour Transform Create</oyNAME>
        <oyDESCRIPTION>Function for Creating a Colour Space Transformation.</oyDESCRIPTION>

        <oyDYNLOAD_PATH></oyDYNLOAD_PATH>
        <!-- void* (*) ( oyProfileList_s *list,
                         oyOptions_s     *opts );
  
             "list" must include the input profile on first position
                                 optional the effect profiles after
                                 the proof profile or empty before last position
                                 the output profile at last position
                    exception is one profile in list for a devicelink


             "opts" must include the mandatory oyOPTION_CMM_'s options as
                                 oyOPTION_CMM_INTENT
                                 oyOPTION_CMM_BPC
                                 oyOPTION_CMM_INTENT_PROOF as well as
                                 oyDATATYPE (oyUINT8 ...)
                                 oyPACKAGE (oyPLANAR or oyINTERLEAVED) and
                    followed by other CMM provided options 
          -->
        <oyDYNLOAD_LIB>libargyllcmm.so.0</oyDYNLOAD_LIB>
        <oyDYNLOAD_FUNC>cmmCreateTransform</oyDYNLOAD_FUNC>

        <!-- Tell about available Options -->
        <oyOPTIONS>
          <oyARRAY>
            <oyOPTION>
              <oyARRAY>
                <oyGROUP>100</oyGROUP>
              </oyARRAY>
              <!-- oyID is derived from enum oyOPTION position and not changeable -->
              <oyOPTION_TYPE>oyTYPE_CHOICE</oyOPTION_TYPE>
              <oyID>3</oyID>
              <oyNAME>Default Rendering Intent</oyNAME>
              <oyDESCRIPTION>Rendering Intent for Colour Space Transformations.</oyDESCRIPTION>
              <oyCHOICES>
                <oyARRAY>
                  <oyNAME>Photometric</oyNAME>
                  <oyNAME>Relative Colorimetric</oyNAME>
                  <oyNAME>Saturation</oyNAME>
                  <oyNAME>Absolute Colorimetric</oyNAME>
                </oyARRAY>
              </oyCHOICES>
              <!-- The complete string will be formed from
                   rights/sw/oyranos/cmms/cmm_id/function_name/keyname_below.
                   Note: For the predefined oyOPTION's the standard settings will
                         be used instead -->
              <oyCONFIG_STRING>intent</oyCONFIG_STRING>
              <!-- The following key is used for saving settings to a XMLish file. -->
              <oyCONFIG_STRING_XML>oyOPTION_CMM_INTENT</oyCONFIG_STRING_XML>
            </oyOPTION>
      
            <oyOPTION>
              <oyARRAY>
                <oyGROUP>100</oyGROUP>
              </oyARRAY>
              <oyOPTION_TYPE>oyTYPE_CHOICE</oyOPTION_TYPE>
              <oyID>4</oyID>
              <oyNAME>Use Black Point Compensation</oyNAME>
              <oyDESCRIPTION>BPC affects only the Relative Colorimetric Rendering Intent.</oyDESCRIPTION>
              <oyCHOICES>
                <oyARRAY>
                  <oyNAME>No</oyNAME>
                  <oyNAME>Yes</oyNAME>
                </oyARRAY>
              </oyCHOICES>
              <!-- The complete string will be formed from
                   rights/sw/oyranos/cmms/cmm_id/function_name/keyname_below.
                   Note: For the predefined oyOPTION's the standard settings will
                         be used instead -->
              <oyCONFIG_STRING>bpc</oyCONFIG_STRING>
              <!-- The following key is used for saving settings to a XMLish file. -->
              <oyCONFIG_STRING_XML>oyOPTION_CMM_BPC</oyCONFIG_STRING_XML>
            </oyOPTION>
      
            <oyOPTION>
              <oyARRAY>
                <oyGROUP>100</oyGROUP>
              </oyARRAY>
              <oyOPTION_TYPE>oyTYPE_CHOICE</oyOPTION_TYPE>
              <oyID>5</oyID>
              <oyNAME>Proofing Rendering Intent</oyNAME>
              <oyDESCRIPTION>Behaviour of colour space transformation for proofing</oyDESCRIPTION>
              <oyCHOICES>
                <oyARRAY>
                  <oyNAME>Relative Colorimetric</oyNAME>
                  <oyNAME>Absolute Colorimetric</oyNAME>
                </oyARRAY>
              </oyCHOICES>
              <!-- The complete string will be formed from
                   rights/sw/oyranos/cmms/cmm_id/function_name/keyname_below.
                   Note: For the predefined oyOPTION's the standard settings will
                         be used instead -->
              <oyCONFIG_STRING>intent_proof</oyCONFIG_STRING>
              <!-- The following key is used for saving settings to a XMLish file. -->
              <oyCONFIG_STRING_XML>oyOPTION_CMM_INTENT_PROOF</oyCONFIG_STRING_XML>
            </oyOPTION>
      
            <oyOPTION>
              <oyARRAY>
                <oyGROUP>100</oyGROUP>
              </oyARRAY>
              <oyOPTION_TYPE>oyTYPE_CHOICE</oyOPTION_TYPE>
              <oyID>6</oyID>
              <oyNAME>Gamut Warning</oyNAME>
              <oyDESCRIPTION>Mark out of gamut colours for the proofing profile.</oyDESCRIPTION>
              <oyCHOICES>
                <oyARRAY>
                  <oyNAME>No</oyNAME>
                  <oyNAME>Yes</oyNAME>
                </oyARRAY>
              </oyCHOICES>
              <!-- The complete string will be formed from
                   rights/sw/oyranos/cmms/cmm_id/function_name/keyname_below.
                   Note: For the predefined oyOPTION's the standard settings will
                         be used instead -->
              <oyCONFIG_STRING>gamut_warn</oyCONFIG_STRING>
              <!-- The following key is used for saving settings to a XMLish file. -->
              <oyCONFIG_STRING_XML>oyOPTION_CMM_GAMUT_WARN</oyCONFIG_STRING_XML>
            </oyOPTION>
          </oyARRAY>
        </oyOPTIONS>
      </oyFUNCTION>
    </oyARRAY>
  </oyFUNCTIONS>

  <!-- various capabilities -->
  <oyCAPABLE>
    <!-- need at least one -->
    <oyDATATYPE>
      <oyARRAY>
        <oyUINT8>1</oyUINT8>
        <oyUINT16>1</oyUINT16>
      </oyARRAY>
    </oyDATATYPE>
    <oyPACKAGE>
      <oyARRAY>
        <!-- mandatory -->
        <oyPLANAR>1</oyPLANAR>
        <!-- mandatory -->
        <oyINTERLEAVED>1</oyINTERLEAVED>
      </oyARRAY>
    </oyPACKAGE>
  </oyCAPABLE>
</oyCMM_REGISTER>


