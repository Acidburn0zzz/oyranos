
COLLECT = ar cru
RANLIB = ranlib

LIBNAME = libXNVCtrl.a
OBJECTS = NVCtrl.o


all:
	echo Compiling NVCtrl.c ...
	$(CC) $(CFLAGS) -I../$(src_dir) ../$(src_dir)/NVCtrl.c -c -o NVCtrl.o $(X_H)
	echo Linking $(LIBNAME) ...
	$(COLLECT) $(LIBNAME) $(OBJECTS)
	$(RANLIB) $(LIBNAME)

clean:
	$(RM) $(LIBNAME) $(OBJECTS)
